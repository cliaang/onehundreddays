<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.action.onehundred.onehundreddays.AtyEditAction">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/action_picture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/running" />

        <TextView
            android:id="@+id/edit_action_action_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/action_picture"
            android:layout_alignLeft="@+id/action_picture"
            android:layout_alignStart="@+id/action_picture"
            android:text="Running"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="60sp" />


        <View
            android:id="@+id/divider_2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/action_picture"
            android:background="@android:color/darker_gray" />


        <TextView
            android:id="@+id/edit_action_hint_start_date"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/divider_2"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:text="开始日期"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/edit_action_start_date"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/divider_2"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/edit_action_hint_start_date"
            android:layout_toRightOf="@+id/edit_action_hint_start_date"
            android:gravity="center_vertical"
            android:text="2015/5/22"
            android:textSize="30sp" />

        <View
            android:id="@+id/divider_3"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/edit_action_hint_start_date"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/edit_action_lasting_time"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/divider_3"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:text="持续天数"
            android:textSize="30sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/divider_3"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/edit_action_hint_start_date"
            android:layout_toRightOf="@+id/edit_action_hint_start_date"
            android:gravity="center_vertical"
            android:text="100"
            android:textSize="30sp" />

        <View
            android:id="@+id/divider_4"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/edit_action_lasting_time"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/edit_action_end_date_hint"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/divider_4"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:text="结束日期"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/edit_action_end_date"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/divider_4"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/edit_action_end_date_hint"
            android:layout_toRightOf="@+id/edit_action_end_date_hint"
            android:gravity="center_vertical"
            android:text="2015/5/22"
            android:textSize="30sp" />

        <View
            android:id="@+id/divider_5"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/edit_action_end_date_hint"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/edit_action_reminding_time_hint"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/divider_5"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:text="提醒时间"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/edit_action_reminding_time"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/divider_5"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/edit_action_reminding_time_hint"
            android:layout_toRightOf="@id/edit_action_reminding_time_hint"
            android:gravity="center_vertical"
            android:text="20：00"
            android:textSize="30sp" />

        <View
            android:id="@+id/divider_6"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/edit_action_reminding_time_hint"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/edit_action_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider_6"
            android:layout_margin="10dp"
            android:textSize="20sp" />

    </RelativeLayout>

</ScrollView>
