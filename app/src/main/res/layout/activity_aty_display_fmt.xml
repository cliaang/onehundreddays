<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.action.onehundred.onehundreddays.AtyDisplayFmt">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/display_fragment_container">

    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/tabbg">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/display_fragment_grid"
            style="@style/Widget.AppCompat.CompoundButton.Switch"
            android:src="@drawable/ic_action_view_as_grid"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/Widget.AppCompat.CompoundButton.Switch"
            android:layout_weight="1"
            android:id="@+id/display_fragment_list"
            android:src="@drawable/ic_action_view_as_list"/>
    </LinearLayout>

</LinearLayout>
